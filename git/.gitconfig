[core]
	editor = code --wait
	excludesfile = /Users/helrabelo/.gitignore_global

[push]
default = current

[color]
  ui = auto

[color "status"]
  added = green
  changed = yellow
  untracked = red

[color "branch"]
  current = magenta
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green


[alias]
  me = config user.name
  fe = fetch origin
	pom = push origin master -u
	ps = push
	pso = push origin
	pullom = pull origin master
	ci = commit
	co = checkout
	cm = checkout master
	cb = checkout -b
  fork = checkout -b
	st = status -sb
	sf = show --name-only
	lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
  standup = !(git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --since yesterday --author "$(git me)")
  pull-sub = !(git pull && git submodule foreach git pull origin master)
  committers = !(git log | grep Author | sort | uniq -c | sort -n -r)
	unstage = reset HEAD --
	undo = checkout --
	rollback = reset --soft HEAD~1
	cm = commit -m
	gsp = stash pop
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/bin/gpg
[init]
	defaultBranch = main
